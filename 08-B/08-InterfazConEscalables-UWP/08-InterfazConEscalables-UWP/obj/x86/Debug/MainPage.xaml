            <TextBlock x:ConnectionId='23' 
                Name="cajaTitulo"
                Text="Textos indescifrables"
                TextWrapping="Wrap"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                ScrollViewer.IsVerticalRailEnabled="True"
