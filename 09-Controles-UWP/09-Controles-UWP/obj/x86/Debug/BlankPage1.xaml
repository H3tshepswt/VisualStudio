<Page
    x:Class="_09_Controles_UWP.BlankPage1"
    
    xmlns:Maps="using:Windows.UI.Xaml.Controls.Maps"
    xmlns:Custom="using:Windows.UI.Xaml.Controls.Maps"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_09_Controles_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Windows10FallCreatorsUpdate="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 5)"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:ConnectionId='2' 
            Grid.Row="0"
            Grid.Column="0"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Content="Volver"
                                />
        
        <!--Selector de colores-->
        <ScrollViewer
            Grid.Row="0"
            Grid.Column="1">
            
            <Windows10FallCreatorsUpdate:ColorPicker x:ConnectionId='5' 
            Name="selectorColores"
            Margin="0"
            ColorSpectrumShape="Ring"
            
            />
        </ScrollViewer>
        
        
        <!--Mapa-->
        <Maps:MapControl x:ConnectionId='3'
            Name="mapa"
            Grid.Row="1"
            Grid.Column="0"
            ZoomInteractionMode="GestureAndControl"
            TiltInteractionMode="GestureAndControl"
            />
        
        <!--Video-->
        <!--https://social.technet.microsoft.com/wiki/contents/articles/38014.universal-windows-application-play-a-youtube-video.aspx-->
        <MediaElement x:ConnectionId='4'
            Grid.Row="1"
            Grid.Column="1"
            Name="reproductor"
            Margin="10"
            AutoPlay="False"
            AreTransportControlsEnabled="True"
            />
        <!--Source="https://www.youtube.com/watch?v=qJLfCIoyxps"-->
    </Grid>
</Page>

